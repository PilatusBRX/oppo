import { Icon } from "astro-icon/components";
const today = new Date();
---

<footer>
  &copy; {today.getFullYear()} Hellostudio. Todos os direitos reservados.
  <div class="social-links">
    <a href="https://www.linkedin.com/in/marcelo-anselmo/" target="_blank">
      <span class="sr-only">Siga-me no Linkedin</span>
      <Icon name="linkedin" size={32} />
    </a>

